<div class="card mb-4">
    {% if property.picture %}
        <img src="{{ vich_uploader_asset(property.picture, 'imageFile') | imagine_filter('thumb') }}" alt=""
             class="card-img-top" width="100%" height="auto">
    {% else %}
        <img src="{{ '/images/empty.jpg' | imagine_filter('thumb') }}" alt=""
             class="card-img-top" width="100%" height="auto">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property_show', {'slug': property.slug}) }}">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text">
            {{ property.surface }} mÂ² - {{ property.city }} ({{ property.postalCode }})
        </p>
        <div class="text-primary" style="font-size: 2rem; font-weight: bold">
            {{ property.formattedPrice }}
        </div>
    </div>
</div>